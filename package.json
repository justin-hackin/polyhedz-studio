{
  "name": "spacecraft-net-factory",
  "version": "1.0.0",
  "description": "A toolkit for the fabrication of interlocking pyramid nets which form stellations and other geometric polyhedra, something playfully referred to as SpaceCrafts",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "node fuse",
    "release": "run-s parcel:build \"electron:build {@}\" --",
    "watch": "run-p -r parcel:watch electron:start",
    "electron:start": "electron .",
    "electron:build": "build --x64 --publish=never",
    "lint": "eslint app/**/*.ts{,x}"
  },
  "build": {
    "appId": "com.playful.geometer.spacecraft-net-factory",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "msi",
      "icon": "build/logo.ico"
    },
    "files": [
      "main.js",
      "build/*",
      "build-resources/*"
    ],
    "directories": {
      "buildResources": "build-resources"
    }
  },
  "keywords": [
    "parcel",
    "react"
  ],
  "author": "“Robin <“wrobin@gmx.net”> (https://www.robinwieruch.de)",
  "license": "MIT",
  "dependencies": {
    "@flatten-js/boolean-op": "^1.1.4",
    "@flatten-js/core": "git+https://github.com/justin-hackin/flatten-js.git",
    "@flatten-js/polygon-offset": "^1.0.5",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/styles": "^4.10.0",
    "canvg": "^3.0.6",
    "clsx": "^1.1.1",
    "electron-debug": "^3.1.0",
    "lib2geom-path-boolean-addon": "git+https://github.com/justin-hackin/lib2geom-path-boolean-addon.git",
    "lodash": "^4.17.19",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "react": "^16.13.1",
    "react-color": "^2.18.1",
    "react-dom": "^16.13.1",
    "react-moveable": "^0.16.6",
    "react-resize-detector": "^4.2.3",
    "react-svg-pan-zoom": "^3.8.0",
    "react-use-gesture": "^7.0.15",
    "svg-path-parser": "git+https://github.com/justin-hackin/svg-path-parser.git",
    "svgpath": "^2.3.0",
    "three": "^0.113.2",
    "three-gltf-loader": "^1.111.0",
    "threejs-orbit-controls": "^1.0.3",
    "use-query-params": "^0.4.6",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-transform-destructuring": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@types/node": "^13.13.13",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "app-root-path": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "babel-preset-env": "^1.7.0",
    "cpx2": "^2.0.0",
    "electron": "^9.1.1",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.2",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "execa": "^4.0.3",
    "fuse-box": "^3.7.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.9.6"
  }
}
